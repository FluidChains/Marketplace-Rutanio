<br><br>



  <div class="container">
    <div class="row">
      <div class="center">
        <h2>Mercado</h2>
         <p>Encuentra profesionales en diversas areas o postula tus servicios </p>
         <br>
         <% if user_signed_in? %>
         <a class="waves-effect waves-light  btn modal-trigger white-text fucsia_ruta" href="#renderModal">Crea Nuevo</a>
         <% else %>
         <%= link_to "Crea Nuevo", new_user_session_path,  class:"waves-effect waves-light  btn modal-trigger white-text fucsia_ruta"  %>

         <% end %>


      </div>

    </div>
    <div class="row center">
      <div class="col s12 m12 l12">
        <ul class="listado_card center">
          <li><%= link_to "Todos", root_path , class:"fucsia_font" %></li>
          <% @categories.each do |category| %>
           <% if category.id == 1 %>
            <li><%= link_to category.nombre_categoria, category , class:"morado_font"%></li>
            <% else %>
            <li><%= link_to category.nombre_categoria, category , class:"fucsia_font"%></li>
            <% end %>
          <% end %>

        </ul>
        <br>
        <div class="container">
          <div class="row">
            <div class="col s12 m12 l12 center buscador">
              <%= form_tag welcome_search_path, :method => :get do %>
                <%= text_field_tag   class:" black-text  input-field inline", placeholder:"Buscar"%>
                <%= submit_tag 'Buscar' ,class:"btn morado_ruta"%>
              <% end %>
            </div>

          </div>
        </div>

      </div>

    </div>


    </div>

    <div class="container">
      <div class="row">

        <% if !@services.empty? %>
        <% @services.each do |service| %>
          <div class="col s12 m6 l4">
              <%= link_to service  do  %>
            <div class="card hoverable carta">
              <div class="card-content">
                <div class="titulo_card">
                  <%= service.name.truncate(60)  %>
                 </div>
                 <div class="left">
                   <p><%= service.information.truncate(50)  %> </p>
                 </div>
                 <br>

                 <div class="row ">
                   <div class="left">
                     <ul class="imagenes_carta">
                       <li>
                         <% if !service.valid_until.nil? %>
                             <i class="material-icons">update</i>
                             <%= service.valid_until.strftime("%d-%b-%Y")  %>
                             vencimiento
                         <% end %>
                       </li>
                       <li>
                          <% if !service.precio.nil? %>
                           <a href="#"><img src="/images/ruta.png" alt=""  class="iconos_market">
                              <%= number_with_delimiter(service.precio.round, :delimiter => ',') %>
                              RUTA
                            </a>
                          <% end %>
                       </li>
                       <li>
                          <% if !service.exos_amount.nil? %>
                            <a href="#"><img src="/images/exos.png" alt=""  class="iconos_market"> <%= number_with_delimiter(service.exos_amount.round, :delimiter => ',') %></a>
                            <span>EXO</span>
                          <% end %>
                       </li>
                     </ul>

                     <br>

                       <br>
                   </div>

                 </div>
              </div>
              <div class="card-action">
                <% service.skills.each do |skill| %>

                <%  skill.color_tag %>
              <div class="chip white-text" style=" background: <%=  skill.color_tag %> !important;" >

                <%=  skill.name.truncate(20) %>
              </div>

              <% end %>

              </div>



            </div>
          <% end %>
          </div>


        <% end %>



        <% else %>
          <div class="container">
              <div class="card">
                <div class="card-body">
                  <h1 class="text-center">No existen coincidencias</h1>
                </div>
              </div>
          </div>

        <% end %>
      </div>

    </div>
