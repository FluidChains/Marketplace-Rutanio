<div class="container z-depth-3">
  <div class="row">
    <div class="col s12 m12 l12">
      <p id="notice"><%= notice %></p>

      <h1 class="fucsia_font">Todas las Publicaciones</h1>

      <table class="striped responsive-table">
        <thead>
          <tr>
            <th>Usario del servicio</th>
            <th>Titulo</th>
            <th>Precio Rutas</th>
            <th>Fecha de vencimiento</th>
            <th>Cantidad de Respuestas </th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @services.each do |service| %>
            <tr>
              <td><%= service.user.email %></td>
              <td><%= service.name %></td>
              <td><%= service.precio %></td>
              <td><%= service.valid_until %></td>
              <td><%= service.requests.count %></td>
              <% if service.may_publish? %>
                <td>
                  <%= link_to 'Publicar', "/services/#{service.id}/publish", class:"btn green" , method: :put%>
                </td>
                <% else %>
                <td>
                  <%= link_to 'Descontinuar', "/services/#{service.id}/unpublish", class:"btn red" , method: :put%>
                </td>
              <% end %>

              <td><%= link_to 'Mirar', service %></td>
              <td><%= link_to 'Editar', edit_service_path(service) %></td>
              <td><%= link_to 'Eliminar', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>

<br><br><br><br><br>

<p id="notice"><%= notice %></p>

<h1>Requests</h1>

<table>
  <thead>
    <tr>
      <th>Mensaje</th>

      <th>User</th>
      <th>Service</th>
      <th>Mail del servicio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.mensaje %></td>
        <td><%= request.user.email %></td>
        <td><%= request.service.name %></td>
          <td><%= request.service.mail_servicio %></td>


        <td><%= link_to 'Show', @service_request %></td>
        <td><%= link_to 'Destroy Comment', [request.service, request], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
