<div class="panel panel-primary">
  <div class="panel-heading">
    <h3 class="panel-title">services</h3>
  </div>
  <div class="table-responsive">
    <table class='table table-hover table-condensed'>
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Department</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody id='services'>
        <%= render @services %>
      </tbody>
    </table>
  </div>
</div>
<%= will_paginate @services %>
<%= link_to 'New Services', new_services_path, class: 'btn btn-lg btn-block btn-primary' %>
