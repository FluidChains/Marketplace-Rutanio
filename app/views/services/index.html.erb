<div class="container z-depth-3">
  <div class="row">
    <div class="col s12 m12 l12">
      <p id="notice"><%= notice %></p>

      <h1 class="fucsia_font">Mis Publicaciones</h1>

      <table class="striped responsive-table">
        <thead>
          <tr>
            <th>Titulo</th>
            <th>Precio Rutas</th>
            <th>Fecha de vencimiento</th>
            <th>Cantidad de Respuestas </th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @services.each do |service| %>
            <tr>
              <td><%= service.name %></td>
              <td><%= service.precio %></td>
              <td><%= service.valid_until %></td>
              <td><%= service.requests.count %></td>
              <td><%= link_to 'Mirar', service %></td>
              <td><%= link_to 'Editar', edit_service_path(service) %></td>
              <td><%= link_to 'Eliminar', service, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>

</div>
<div class="container">
  <div class="row">
    <% @services.each do |service| %>

      <div class="col s12 m6 l4">
          <%= link_to service  do  %>
        <div class="card carta">
          <%= link_to 'Editar', edit_service_path(service) %>
          <%= link_to 'Eliminar', service, method: :delete, data: { confirm: 'Are you sure?' } %>

          <div class="card-content black-text">
            <span class="card-title "><%= service.name  %></span>
            <p><%= service.information.truncate(150)  %> </p>
            <div class="container">
              <div class="row">
                <i class="material-icons">update</i>
                <%= service.valid_until.strftime("%d-%m-%Y ")  %>
                <span>vencimiento</span>
              </div>
              <div class="row">
                <a href="#"><img src="images/ruta.png" alt=""  class="iconos_market"> <%= number_with_delimiter(service.precio.round, :delimiter => ',') %></a>
                <span>Rutas</span>
              </div>
                <% if !service.exos_amount.nil? %>
              <div class="row">
                <a href="#"><img src="images/exos.png" alt=""  class="iconos_market"> <%= number_with_delimiter(service.exos_amount.round, :delimiter => ',') %></a>
                <span>Exos</span>
              </div>
                <% end %>
            </div>
          </div>

          <br>


        </div>
             <% end %>
      </div>


    <% end %>


  </div>
</div>
